@model IEnumerable<Order>

@{
    ViewBag.Title = "Orders";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Client</th>
                <th>Zip code</th>
                <th colspan="2">Description</th>
                <th>Payment status</th>
                <th>Realized</th>
                <th>Action</th>
            </tr>
        </thead>

        @foreach (Order o in Model)
        {
            <tr>
                <td>@o.FirstName @o.LastName @o.OrderID</td>
                <td>@o.Zip</td>
                <th>Item</th>
                <th>Quantity</th>
                <th>@o.PaymentStatus</th>
                <th>
                    @if (o.Shipped)
                    {
                        <a class="text-success">Send</a>
                    }
                    else
                    {
                        <a class="text-danger">Not send</a>
                    }
                </th>
                <td class="form-group d-inline-flex justify-content-around">
                    @if (o.Shipped != true && User.IsInRole("Admins"))
                    {
                        <form asp-action="MarkShipped" method="post" class="float-left pr-1">
                            <input type="hidden" name="orderId" value="@o.OrderID" />
                            <button type="submit" class="btn btn-sm btn-danger">Realized</button>
                        </form>
                    }
                    @if (o.PaymentStatus == null)
                    {
                        <form asp-action="Pay" method="post">
                            <input type="hidden" name="orderId" value="@o.OrderID" />
                            <button type="submit" class="btn btn-sm btn-primary">Pay</button>
                        </form>
                    }
                    
                    <form asp-action="Delete" method="post" class="float-right pl-1">
                        <input type="hidden" name="orderId" value="@o.OrderID" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
            @foreach (CartLine line in o.Lines)
            {
                <tr>
                    <td colspan="2" class="p-1"><img src="@line.Product.ImgUrl.Split(",")[0]" style="width:auto; height:128px; padding:1px" class="img-fluid " /></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                    <td colspan="3"></td>
                </tr>
            }
            <tr>
                <td colspan="7"></td>
            </tr>
        }


    </table>
}
else
{
    <div class="text-center">No orders</div>
}