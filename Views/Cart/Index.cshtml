@model CartIndexViewModel

<h2>Twój koszyk</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Products</th>
            <th class="text-right">Price</th>
            <th class="text-right">Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">
                    @line.Quantity
                    @if (line.Quantity > line.Product.Quantity)
                    {
                        <span class="text-danger">No products avalible!</span>
                    }
                </td>
                <td class="text-left">@line.Product.Name @line.Product.Size @line.Product.Colour</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Product.Price).ToString("c"))</td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="ProductID" value="@line.Product.ProductID" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Summary:</td>
            <td class="text-right">@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Products" asp-action="List">Continue shopping</a>
    @if (Model.Cart.Lines.Count() == 0)
    {
        <input type="button" class="btn btn-primary" disabled value="Złóż zamówienie" />
    }
    else
    {
        bool isQuantityAvailablent = false;
        @foreach (CartLine line in Model.Cart.Lines)
        {
            @if (line.Quantity > line.Product.Quantity)
            {
                isQuantityAvailablent = true;
            }
        }
        if (isQuantityAvailablent)
        {
            <input type="button" class="btn btn-primary" disabled value="Order" />
        }
        else
        {
            <input type="button" class="btn btn-primary" value="Order" onclick="location.href='@Url.Action("Checkout","Order")'" />
        }

    }

</div>
