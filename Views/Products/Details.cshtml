@model ProductDetailsViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = Model.Selected.Name;
}
<div class="jumbotron container">
    <h4>
        @Model.Selected.Name @Model.Selected.Size @Model.Selected.Colour
    </h4>
    <div class="row">
        <div class="col-sm">

            <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="carousel">
                @{
                    var images = Model.Selected.ImgUrl?.Split(',');
                }
                <ol class="carousel-indicators">
                    @for (int i = 0; i < images?.Length; i++)
                    {
                        @if (i == 0)
                        {
                            <li type="button" data-target="#carouselExampleIndicators" data-slide-to=@i class="active" aria-current="true"></li>
                        }
                        else
                        {
                            <li type="button" data-target="#carouselExampleIndicators" data-slide-to=@i></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < images?.Length; i++)
                    {
                        @if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src=@images[i] class="img-fluid img-thumbnail d-block w-100" />
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src=@images[i] class="img-fluid img-thumbnail d-block w-100" />
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" role="button" data-target="#carouselExampleIndicators" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" role="button" data-target="#carouselExampleIndicators" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only dark">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm">

        </div>
        <div class="col-sm">

        </div>
    </div>
    <p>@Model.Selected.Description</p>

    <h3>Opcje</h3>
    <div class="row form-group">
        @foreach (Product item in Model.Products)
        {
            <form id="@item.ProductID" asp-action="Details" method="post">
                <input type="hidden" name="productId" value="@item.ProductID" />
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <input type="submit" class="page-link" value="Rozmiar: @item.Size  Kolor: @item.Colour" />
            </form>
        }
    </div>
    <div class="row align-content-start">
        <a class="row alert float-right">Dostępne @Model.Selected.Quantity sztuk.</a>
    </div>
    <form id="@Model.Selected.ProductID"
          asp-action="AddToCart"
          asp-controller="Cart"
          method="post">
        <input type="hidden" name="productId" value="@Model.Selected.ProductID" />
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        @if (Model.Selected.Quantity <= 0)
        {
            <button disabled type="submit" class="btn btn-success fas fa-cart-arrow-down float-right">   @Model.Selected.Price.ToString("c")</button>
        }
        else
        {
            <button type="submit" class="btn btn-success fas fa-cart-arrow-down float-right">   @Model.Selected.Price.ToString("c")</button>
        }
    </form>

</div>
